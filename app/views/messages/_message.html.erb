<span class="subject" id="show_details_link_<%= message.id %>" style="display:inline;">
  <%= link_to(h(message.subject), "#", :onclick => "show_details('blinddown_#{message.id}','show_details_link_#{message.id}','hide_details_link_#{message.id}','con_#{message.id}'); return false;") %>
</span>

<span class="subject" id="hide_details_link_<%= message.id %>" style="display:none;">
  <%= link_to(h(message.subject), "#", :onclick => "hide_details('blinddown_#{message.id}','show_details_link_#{message.id}','hide_details_link_#{message.id}','con_#{message.id}'); return false;") %>
</span>

<!-- End subject and message preview -->

<div id="messagepreview"><%= h(truncate(message.body.gsub!(/\n/, ''), 20, "...")) %></div>

<div style="color:#7b7b7b;font-family:Arial;font-size:9pt;font-weight:normal;display:none;" id="blinddown_<%= message.id %>">
  <%= message.body %>
  <br class="clearfloat" />
</div>